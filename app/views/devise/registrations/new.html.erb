
<div class="row">
  <div class="col-sm-4">
  </div>
  <div class="col-sm-4">
    <br>
    <br>
  <h2>회원가입</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  
  <div class="field">
    <%= f.label :학번 %><br />
    <%= f.text_field :studentid %>
  </div>
  
  <div class="field">
    <%= f.label :비밀번호 %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label :비밀번호확인 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label :이름 %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :"이메일(형식에 맞게 써주세요)" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :"휴대전화 번호" %><br />
    <%= f.text_field :phonenum %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "가입하기", class:"btn btn-success" %>
  </div>
<% end %>

  </div>
  <div class="col-sm-4">
  </div>
</div>